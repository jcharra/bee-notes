{
  "rules": {
    ".write": "auth != null",
    ".read": "auth != null",
    "users": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "$uid === auth.uid",
        "journals": {
          "$jid": {
            "entries": {
              ".indexOn": "date"
            }
          }
        },
        "swarms": {
          ".validate": "true"
        },
        "reminders": {
          ".validate": "true"
        },
        "groups": {
          ".validate": "true"
        },
        "queen": {
          ".validate": "true"
        },
        "$path": {
          ".validate": "false"
        }
      }
    },
    "$path": {
      ".validate": "false"
    }
  }
}
